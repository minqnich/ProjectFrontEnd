    <section>
    <div class="container">
      <div class="contact-container">
        <div class="form-container">
          <h2>CONTACT US</h2>
          <form action="" class="contact-form">
            <label for="Name" class="fcf-label">Your name:</label>
            <input type="text" placeholder="Name" style="color: black;" />
            <label for="Email" class="fcf-label ">Your email address:</label>
            <input type="email" name="" id="" placeholder="Email" style="color: black;" />
            <label for="Message" class="fcf-label">Your message:</label>
            <textarea
              name=""
              id=""
              cols="30"
              rows="10"
              placeholder="Write Message Here..."
              required
              style="color: black;"
            ></textarea>
            <input type="submit" value="Send Message" class="send-button" />
          </form>
        </div>

        <!-- map -->
        <div id="map"></div>
      </div>
    </div>
</section>


    <script>
      maptilersdk.config.apiKey = "i4ekmh2bP2tr7n8GzoIy";
      const map = new maptilersdk.Map({
        container: "map",
        style: maptilersdk.MapStyle.STREETS,
        center: [98.95088969489137, 18.799359116233916], // CAMT CMU
        zoom: 18, // starting zoom
